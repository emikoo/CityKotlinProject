<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/margin_item">
    
    <ImageView
        android:id="@+id/flag_iv"
        android:layout_width="150dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/flag_iv"
        app:layout_constraintStart_toEndOf="@id/flag_iv"
        app:layout_constraintBottom_toTopOf="@id/capital_tv"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="THE GREAT KYRGYZSTAN"
        android:layout_marginStart="8dp"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/capital_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/name_tv"
        app:layout_constraintStart_toEndOf="@id/flag_iv"
        app:layout_constraintBottom_toBottomOf="@id/flag_iv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        tools:text="FRUNZE"
        android:textSize="16sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>